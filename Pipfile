[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true
skipdist = true

[dev-packages]
black = "~=20.8b1"
coverage = "~=5.3.1"
pytest = "~=6.2.1"
SecretStorage = "~=3.3.0"
Sphinx = "~=3.3.1"
tox = "~=3.20.1"
twine = "~=3.2.0"

[packages]
colorama = "~=0.4.4"
coloredlogs = "~=15.0"
fire = "~=0.3.1"

[pipenv]
allow_prereleases = true

[scripts]
build = "python setup.py sdist bdist_wheel"
clean = "python setup.py clean"
docs = "make -C docs html"
install = "python setup.py install --user"
lint = "black ."
release = "twine upload dist/*"
release_test = "twine upload -r testpypi dist/*"
test = "tox -or -p auto"
